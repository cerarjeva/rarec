html
  head
    title="Kontakt"
    
    link(rel="stylesheet" href="stylus/main.css")
    link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/normalize/5.0.0/normalize.min.css")
    link(rel="stylesheet" href="https://fonts.googleapis.com/css?family=Roboto:400,500,700")

    meta(name="viewport" content="width=device-width, initial-scale=1")
      
    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js')
    script(src='https://unpkg.com/scrollreveal/dist/scrollreveal.min.js')
    script(src="./js/main.js") 
  body
    .navigation
      .logo-wrapper
        a(href="./index.html")
          img( class="logo" src="media/logo.svg", alt="Rarec Inc")
      .menu
        a(href="./index.html")="DOMOV"
        .dropdown-wrapper
          a(href="#")="PRODUKTI"
            .dropdown
              .dropdown-list
                a(href="./industrijski-sotori.html")="Industrijski sotori"
                a(href="./kmetijski-šotori.html")="Kmetijski sotori"
                a(href="./nadstreški.html")="Nadsteski"
                a(href="./konstrukcije-po-meri.html")="Konstrukcije po meri"
        a(href="./contact.html" class="active")="KONTAKT"
        a(href="./reference.html")="REFERENCE"
        a(href="./o-podjetju.html")="O PODJETJU"

    .centered-wrapper 
      section.contact#focus
        .page-header
           h1="Pišite nam"
           
        .flex   
          .message-form
            h3="Pošljite sporočilo"
            form#form(method="post" action="https://usebasin.com/f/f5aa31d987c8" accept-charset="utf-8")
              .row
                .column
                  .email.form-element
                    label(for="inputEmail")="Vaš elektronski naslov"
                    input#inputEmail(type="email" name="email")

                .column
                  .comp.form-element
                    label(for="inputCompany")="Ime podjetja"
                    input#inputCompany(type="text" name="company")
                  .name.form-element
                    label(for="inputName")="Ime in priimek"
                    input#inputName(type="text" name="name")

              label(for="inputMessage")="Vaše sporočilo"
              textarea#inputMessage(rows='8' name="message")

              button#submit-btn(type="submit")='Pošlji'
              
          .contact-address
            h3="Kontaktni podatki"
            .address
              .location
                p="RAREC IN d.o.o. PC Žeje pri Komendi"
                p="Pod bori 2"
                p="1218 Komenda"
              .number
                p="Telefon: +386 1 51 50 250"
                p="Fax: +386 1 51 50 251"
              .email
                p(style="color:#AAA")="E-mail:  info@rarec.si"
              .gsm  
                p="GSM : 051 631 093"



    include footer.pug
            

        
