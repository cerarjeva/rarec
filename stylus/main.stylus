$borderColor = #d3dbe4
$paleSky = #676B72
$darkBlue = #474F59

body
  margin: 0
  padding: 0
  background: #fff
  color: $darkBlue
  font-size: 16px
  font-family: Roboto, system-ui, sans-serif
  -webkit-font-smoothing: antialiased
  transition: all .3s

a
  text-decoration: none
  color: $darkBlue
  transition: all .3s
  opacity: 1
  font-size: 14px
  &:hover
    opacity: .8
    cursor: pointer

h1
  font-size: 56px
  font-weight: 600
  margin: 0px
  width: auto;

h2
  font-size: 40px
  font-weight: 600

h3
  font-size: 24px
  font-weight: 500

p
  font-size: 16px
  font-weight: 400
  line-height: 20px

li
  list-style none

.active
  opacity 1 !important
  color $paleSky

 .navigation
   position: relative
   display: flex
   justify-content: space-between
   padding: 32px 48px
   align-items: center
   height: 56px
   z-index: 99  !important

 .logo
    height: 32px

section
  min-height 100vh

.menu
  position: relative;
  display: flex
  a
    font-size: 14px
    margin-left: 24px
    letter-spacing: 1.6px
    transition: all .3s
    opacity: .5
    &:hover
      opacity: 1
      transform: translateX(2px)


.hero
  display: flex
  justify-content: flex-end


.hero-text
  margin-top: 160px
  max-width: 200px
  border-left: 1px solid $borderColor
  border-bottom: 1px solid $borderColor
  border-top: 1px solid $borderColor
  padding: 32px
  max-height: 280px
  h1
    font-size: 88px
    font-weight: 500
    margin 0px !important
  p
    max-width: 128px
    font-size: 16px
    line-height: 24px
    margin-bottom: 32px
  a
    margin-top: 40px
    font-size: 14px
    font-weight: 300

.hero-bg
  height: 600px
  width: 1024px
  background: #222
  display: flex
  justify-content: center
  align-items: center
  &:after
    content: ''
    height: 100%
    width: 100%
    background: $paleSky

.control-wrapper
  display: flex
  height: 320px
  width: 900px
  z-index: 2
  align-items: center
  padding: 32px
  position: absolute

.hero-image
  height: 500px
  width: 768px
  background: #555
  position: absolute
  z-index: 3

.controls
  display: flex
  width: 100%
  justify-content: space-between
  > *
    height: 40px
    width: 40px
    display: flex
    justify-content: center
    align-items: center
    opacity: .6
    transition: all .3s
    cursor: pointer
    &:hover
      opacity: 1
      cursor: pointer
  .control_prev
    background: url('../media/chev-l.svg')
    background-repeat: no-repeat
    background-position: center
    border-left: 1px solid white
    &:hover
      width 32px
  .control_next
    background: url('../media/chev-r.svg')
    background-repeat: no-repeat
    background-position: center
    border-right: 1px solid white
    &:hover
      width 32px


#slider
  position: absolute;
  overflow: hidden;
  height: 500px !important;
  width: 768px !important;


#slider ul
  position: relative;
  margin: 0;
  padding: 0;
  list-style: none;


#slider ul li
  position: relative;
  display: block;
  float: left;
  height: 500px;
  width: 768px;
  margin: 0;
  padding: 0;
  background: #ccc;
  text-align: center;
  background-size:cover;


li
  background-size: cover
  background-repeat: no-repeat



.homepage-two
  height: 100vh
  display: flex
  justify-content: flex-start
  align-items: center

.two-image
  height: 500px
  width: 770px
  background-size: cover
  background-repeat: no-repeat
  margin-right: 64px
  background-image: url('../media/home-two.png');

.two-text
  max-width: 200px
  z-index: 99
  &:before
    content: ''
    position absolute
    margin-left: -65px
    margin-top: 40px
    height: 300px
    width: 384px
    border-style: solid
    border-width: 1px 1px 1px 0px
    border-color: $borderColor
    z-index: -1




.homepage-three
  height: 100vh
  display: flex
  flex-direction: column
  justify-content: center
  align-items: center
  margin-bottom: 80px

.three-image
  height: 500px
  width: 1120px
  margin-bottom: 40px
  background-image: url('../media/home-three.png');
  background-size: cover
  background-repeat: no-repeat

.three-text
  max-width: 640px
  z-index: 99
  &:before
    content: ''
    position absolute
    margin-left: -64px
    margin-top: 40px
    height: 160px
    width: 800px
    border: 1px solid $borderColor
    z-index: -1


.homepage-four
  height: 100vh
  display: flex
  flex-direction: row
  justify-content: flex-start
  align-items: center

.four-image-left
  height: 580px
  width: 282px
  margin-right: 40px
  background-image: url('../media/four-l.png');
  background-size: cover
  background-repeat: no-repeat

.four-image-right
  height: 500px
  width: 100%
  min-width: 700px
  background-image: url('../media/four-r.png');
  background-size: cover
  background-repeat: no-repeat

.four-text
  max-width: 276px
  z-index: 99
  margin-right: 64px
  margin-top: -230px
  &:before
    content: ''
    position absolute
    margin-left: -24px
    margin-top: 40px
    height: 320px
    width: 248px
    border: 1px solid $borderColor
    z-index: -1



.homepage-five
  height: 130vh
  align-items: center
  justify-content: center

.clients-wrapper
  max-width: 1024px
  margin: 0 auto
  .title
    margin-bottom: 64px

.client-grid
  display: flex
  .col
    display: flex
    flex: 1
    flex-direction: column
    margin-right: 16px
  .client
    width: 240px
    height: 160px
    border: 1px solid $borderColor
    margin-bottom: 16px
    display: flex
    align-items: center
    justify-content: center
    transition: all .8s
    img
      transform: scale(.4)
      opacity: .4
      transition: all .8s
      -webkit-filter: invert(100%)
    &:hover
      border 1px solid $paleSky
      img
        opacity: 1
        transform: scale(.45)



.footer
  height: 300px
  display: flex
  background: $darkBlue

  .copyright
    width: 64px
    display: flex
    align-items: flex-start
    justify-content: center
    p
      transform: rotate(-90deg)
      position: absolute
      font-size: 13px
      color: white
      margin-top: 88px
  .address
    width: 320px
    margin-top: 40px
    margin-left: 64px
    div
      margin-bottom: 24px
    p
      color: white
      font-size: 13px
      line-height: 20px
      margin: 0px
  .footer-nav
    width: 100%
    .nav
      width: 100%
      display: flex
      justify-content: center
      margin-top: 40px
      a
        margin-right: 32px
        color: white
        transition: all .3s
        &:hover
          color: #fff


