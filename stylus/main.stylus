.about-us
 max-width: 64%
 margin-right: 5vw

 p
   line-height: 24px
   font-weight: 300

.photo-bg
  background-image: url('../media/contact-bg.png')
  background-size: cover
  background-repeat: no-repeat
  height: 600px
  width: 100vw
  left: 0
  top: 0
  z-index: -1 !important
  position: absolute
  opacity: .7


 .flex
  display flex
  margin-top: 40px
  margin-bottom: 80px

.contact-address
  h3
    font-weight: 300
    margin-bottom: 24px
  .address
    margin-top: 56px
    div
      margin-bottom: 32px
      p
        font-size: 14px
        margin: 0px
        padding: 0px
        color: #666

.message-form
  margin-right: 88px
  h3
    font-weight: 300
    margin-bottom: 24px

label
  font-size: 14px
  line-height: 20px
  color: #666
  margin-bottom: 4px

input[type=text]
input[type=email]
  width: 278px
  margin-right: 32px
  height: 32px
  background: transparent
  border-width: 0px 0px 1px 0px
  border-color: $paleSky
  color: $darkBlue
  font-size: 14px
  padding-left: 8px
  outline: none
  &:focus
    border-color: $borderColor

textarea
  background: transparent
  border 1px solid #666
  color: $darkBlue
  font-size: 14px
  padding: 16px
  outline: none
  &:focus
    border-color: $borderColor

#form
  margin-top: 40px

#form
.form-element
  max-width: 600px
  display: flex
  flex-direction: column
  margin-bottom: 32px
  .column
    display: flex


#submit-btn
  margin-top: 32px
  height: 40px
  width: 127px
  border: none
  border-radius: 0px
  font-size: 14px
  color: white
  background: $paleSky
  transition: all .3s
  &:hover
    background: $paleSky + 20
    cursor: pointer

.empty-state
  height: 56vh
  display: flex;
  align-items: center;
  justify-content: center;l
  .empty-wrapper
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    a
      font-size: 16px

.dropdown
  display: none !important
  z-index: 99 !important
  position: absolute
  background: white
  box-shadow: 0px 1px 2px 0px rgba(0,0,0,0.06), 0px 4px 8px 0px rgba(0,0,0,0.06)
  padding: 8px 16px
  flex-direction: column
  .dropdown-list
    display: flex
    flex-direction: column
    min-width: 160px;
  a
    z-index: 999 !important
    letter-spacing: 0px
    margin-bottom: 16px
    margin-left: 8px

.dropdown-wrapper
  position: relative;
  &:hover
    .dropdown
      display: block !important
      opacity: 1

.gallery-grid
  .row
    display: flex;
    margin-bottom: 56px
  .img-text
    width: 50%
    .img
      height: 280px
      background-size: cover !important
      &:first-child
        margin-right: 24px;
    p
      font-size: 12px

.about-rarec
  display: flex
  align-items: flex-start;
  .about-us
    a
      font-weight: bold
    p
      margin-bottom: 16px
      &:last-child
        font-weight: bold

.rarec-licence
  margin-top: 64px

.licence
  width: 300px
  height: 380px
  background: url('../media/licence.png')
  background-size: cover
  box-shadow: 0px 4px 8px 0px rgba(0,0,0,0.04),0px 16px 32px 0px rgba(0,0,0,0.04)

.massive-image
  width: 100%
  height: 640px
  background-size: cover !important
